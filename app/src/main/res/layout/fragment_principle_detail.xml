<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="viewmodel"
                type="com.syffer.pincreminder.presentation.detail.PrincipleDetailViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         tools:context=".presentation.detail.PrincipleDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/constraintLayout3">

            <TextView
                    android:layout_width="383dp"
                    android:layout_height="52dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{viewmodel.title}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@drawable/ic_edit_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" android:id="@+id/floatingActionButton3" app:layout_anchorGravity="end|bottom"
                app:layout_anchor="@+id/constraintLayout3" android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="#2196F3" android:onClick="@{() -> viewmodel.editPrinciple()}"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>